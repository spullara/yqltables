<?xml version="1.0"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
  <meta>
    <author>Sam Pullara</author>
    <documentationURL>http://developer.nytimes.com/docs/article_search_api/</documentationURL>
    <sampleQuery>select * from {table} where query='yahoo' and apikey='...' and begin_date='19990112' and end_date='19993112'</sampleQuery>
  </meta>
  <bindings>
    <select produces="XML" itemPath="result_set.results.book">
      <urls>
        <url>http://api.nytimes.com/svc/books/v2/lists/{date}/{listname}.{responseformat}?api-key={apikey}&amp;sort-order={sortorder}&amp;sort-by={sortby}</url>
      </urls>
      <paging model="offset">
        <start default="0" id="offset"/>
        <pagesize max="20" id="size"/>
        <total default="10"/>
      </paging>
      <inputs>
        <key id="apikey" type="xs:string" paramType="path" required="true"/>
        <key id="responseformat" type="xs:string" paramType="path" const="true" default="xml"/>
        <key id="listname" type="xs:string" paramType="path" required="true"/>
        <key id="sortorder" type="xs:string" paramType="path" default="ASC"/>
        <key id="date" type="xs:string" paramType="path" required="true"/>
        <key id="sortby" type="xs:string" paramType="path" default="rank"/>
      </inputs>
    </select>
    <select produces="XML" itemPath="result_set.results.book">
      <urls>
        <url>http://api.nytimes.com/svc/books/v2/lists/{listname}.{responseformat}?api-key={apikey}&amp;sort-order={sortorder}&amp;sort-by={sortby}</url>
      </urls>
      <paging model="offset">
        <start default="0" id="offset"/>
        <pagesize max="20" id="size"/>
        <total default="10"/>
      </paging>
      <inputs>
        <key id="apikey" type="xs:string" paramType="path" required="true"/>
        <key id="responseformat" type="xs:string" paramType="path" const="true" default="xml"/>
        <key id="listname" type="xs:string" paramType="path" required="true"/>
        <key id="sortorder" type="xs:string" paramType="path" default="ASC"/>
        <key id="sortby" type="xs:string" paramType="path" default="rank"/>
      </inputs>
    </select>
    <select produces="XML" itemPath="result_set.results.result">
      <urls>
        <url>http://api.nytimes.com/svc/books/v2/lists/names.xml?api-key={apikey}</url>
      </urls>
      <paging model="offset">
        <start default="0" id="offset"/>
        <pagesize max="20" id="size"/>
        <total default="10"/>
      </paging>
      <inputs>
        <key id="apikey" type="xs:string" paramType="path" required="true"/>
      </inputs>
    </select>
  </bindings>
</table>